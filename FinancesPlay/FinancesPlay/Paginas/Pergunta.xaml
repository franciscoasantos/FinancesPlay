<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="FinancesPlay.Paginas.Pergunta"
             NavigationPage.HasNavigationBar="false">

    <FlexLayout Direction="Column" BackgroundColor="#2d425b">

        <!-- Barra de status -->
        <FlexLayout Direction="Column" FlexLayout.Grow="0.2" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Text="Dinheiro" TextColor="#cfdde8" Grid.Row="0" Grid.Column="0" HorizontalTextAlignment="Center" FontSize="Body"/>
                <ProgressBar Progress="0.5"
                         x:Name="pbDinheiro"
                         ProgressColor="Gold"
                         Grid.Row="1"
                         Grid.Column="0"/>
                <Label Text="Humor" TextColor="#cfdde8" Grid.Row="0" Grid.Column="1" HorizontalTextAlignment="Center" FontSize="Body"/>
                <ProgressBar Progress="0.5"
                         x:Name="pbHumor"
                         ProgressColor="BlueViolet"
                         Grid.Row="1"
                         Grid.Column="1"/>
                <Label Text="Conhecimento Financeiro" TextColor="#cfdde8" Grid.Row="2" Grid.ColumnSpan="2" HorizontalTextAlignment="Center" FontSize="Body"/>
                <ProgressBar Progress="0.5"
                         x:Name="pbConhecimento"
                         ProgressColor="Green"
                         Grid.Row="3"
                         Grid.ColumnSpan="2"/>
            </Grid>
        </FlexLayout>

        <!-- Perguntas -->
        <FlexLayout FlexLayout.Grow="1" BackgroundColor="#242940">
            <Label Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit?"
                   x:Name="lblPergunta"
                   Margin="10"
                   FontSize="Large"
                   TextColor="#cfdde8"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Start"/>
        </FlexLayout>

        <!-- Alternativas -->
        <FlexLayout Direction="Row"
                    FlexLayout.Grow="0.2"
                    AlignItems="Center"
                        JustifyContent="SpaceEvenly">
            <Button Text=""
                    x:Name="btnAlternativaA"
                    Clicked="btnAlternativaA_Clicked"
                    BackgroundColor="#e6822f"
                    TextColor="White"
                    FontSize="Small"
                    CornerRadius="10"
                    BorderColor="#87593a"
                    BorderWidth="0.2"/>
            <Button Text=""
                    x:Name="btnAlternativaB"
                    Clicked="btnAlternativaB_Clicked"
                    BackgroundColor="#e6822f"
                    TextColor="White"
                    FontSize="Small"
                    CornerRadius="10"
                    BorderColor="#87593a"
                    BorderWidth="0.2"/>
        </FlexLayout>
    </FlexLayout>
</ContentPage>