<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:sfavatar="clr-namespace:Syncfusion.XForms.AvatarView;assembly=Syncfusion.Core.XForms"
             xmlns:controls="clr-namespace:XamBooksApp.Controls;assembly=FinancesPlay"
             mc:Ignorable="d"
             x:Class="FinancesPlay.Paginas.Pergunta"
             NavigationPage.HasNavigationBar="false">

    <FlexLayout Direction="Column" BackgroundColor="#2d425b">

        <!-- Barra de status -->
        <FlexLayout Direction="Column" FlexLayout.Grow="0.1" Margin="10">
            <Grid>
                <Label Text="Nome Aqui" TextColor="#cfdde8" FontAttributes="Bold" Grid.Row="0" Grid.Column="0" HorizontalOptions="Center"></Label>
                <sfavatar:SfAvatarView 
                    x:Name="sfAvAvatar"
                    BackgroundColor="WhiteSmoke"
                    ContentType="Custom"
                    Grid.Row="0"
                    Grid.Column="2"
                    Grid.RowSpan="3"
                    ImageSource=""
                    VerticalOptions="Center"
                    HorizontalOptions="Center"   
                    HeightRequest="50"
                    CornerRadius="25"
                    WidthRequest="50"/>
                <controls:ProgressBar
                    x:Name="pbDinheiro"
                    Text="Dinheiro"
                    Grid.Row="1" Grid.Column="0" 
                    AlternativeTextColor="#0463E1"
                    BarBackgroundColor="#bcd8f6"
                    CornerRadius="6"
                    FontSize="18"
                    GradientEndColor="#C8A500"
                    GradientStartColor="#FFD200"
                    HeightRequest="30"
                    TextColor="White"/>
                <controls:ProgressBar
                    x:Name="pbHumor"
                    Text="Humor"
                    Grid.Row="1" Grid.Column="1" 
                    AlternativeTextColor="#0463E1"
                    BarBackgroundColor="#bcd8f6"
                    CornerRadius="6"
                    FontSize="18"
                    GradientEndColor="#27008F"
                    GradientStartColor="#3800CF"
                    HeightRequest="30"
                    TextColor="White"/>
                <controls:ProgressBar
                    x:Name="pbConhecimento"
                    Text="Conhecimento Financeiro"
                    Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                    AlternativeTextColor="#0463E1"
                    BarBackgroundColor="#bcd8f6"
                    CornerRadius="6"
                    FontSize="18"
                    GradientEndColor="#FF3A9300"
                    GradientStartColor="#54D500"
                    HeightRequest="30"
                    TextColor="White"/>
            </Grid>
        </FlexLayout>

        <!-- Perguntas -->
        <FlexLayout FlexLayout.Grow="1" 
                    BackgroundColor="#242940" 
                    HorizontalOptions="Center"
                    AlignContent="Center">
            <Label Text="Lorem ipsum doaaaaa aaaaa aaaaaaaaaa aaaaaaaaa aaaaaaaaa aaaaaaaaaalor sit amet?"
                   x:Name="lblPergunta"
                   Margin="10"
                   FontSize="Large"
                   LineBreakMode="WordWrap"
                   HorizontalTextAlignment="Center"
                   TextColor="#cfdde8"/>
        </FlexLayout>

        <!-- Alternativas -->
        <FlexLayout Direction="Column"
                    FlexLayout.Grow="0.2"
                    JustifyContent="SpaceEvenly">
            <Button Text=""
                    x:Name="btnAlternativaA"
                    Clicked="btnAlternativaA_Clicked"
                    BackgroundColor="#e6822f"
                    TextColor="White"
                    FontSize="Small"
                    CornerRadius="10"
                    BorderColor="#87593a"
                    BorderWidth="0.2"
                    Margin="5"/>
            <Button Text=""
                    x:Name="btnAlternativaB"
                    Clicked="btnAlternativaB_Clicked"
                    BackgroundColor="#e6822f"
                    TextColor="White"
                    FontSize="Small"
                    CornerRadius="10"
                    BorderColor="#87593a"
                    BorderWidth="0.2"
                    Margin="5"/>
        </FlexLayout>
    </FlexLayout>
</ContentPage>